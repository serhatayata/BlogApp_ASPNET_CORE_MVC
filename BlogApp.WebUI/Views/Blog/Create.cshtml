
@{
    ViewData["Title"] = "AddOrUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Blog

<div class="container bg-dark p-3 rounded-3">
    <h2 class="mb-3 pt-3 text-light">Create a Blog</h2>
    <form asp-controller="Blog" asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Title" class="text-light">Title</label>
            <div><span class="text-danger" asp-validation-for="Title"></span></div>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="text-light">Description</label>
            <div><span class="text-danger" asp-validation-for="Description"></span></div>
            <input asp-for="Description" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryID" class="text-light">Category</label>
            <div><span class="text-danger" asp-validation-for="CategoryID"></span></div>
            <select class="form-control" asp-for="CategoryID" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>
        <button type="submit" class="btn btn-outline-primary form-control">Save Blog</button>
    </form>
</div>

