
@{
    ViewData["Title"] = "AddOrUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Blog
@section scripts {
    <script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body");
    </script>
}
<div class="container bg-dark p-3 rounded-3">
    <h2 class="mb-3 pt-3 text-light">Update a Blog</h2>
    <form asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Image" />
        <input type="hidden" asp-for="BlogID" />
        <div class="form-group mb-3">
            <label asp-for="Title" class="text-light">Title</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="text-light">Description</label>
            <input asp-for="Description" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Body" class="text-light">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <img src="~/img/@Model.Image" width="120" />
            <input type="file" name="file" id="file" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="isApproved" class="form-check-label text-light">Is Approved?</label>
            <input asp-for="isApproved" class="form-check-input">
        </div>
        <div class="form-group mb-3">
            <label asp-for="isHome" class="form-check-label text-light">Is Home?</label>
            <input asp-for="isHome" class="form-check-input">
        </div>
        <div class="form-group mb-3">
            <label asp-for="isSlider" class="form-check-label text-light">Is Slider?</label>
            <input asp-for="isSlider" class="form-check-input">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Image" class="text-light">Category</label>
            <select class="form-control" asp-for="CategoryID" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>
        <button type="submit" class="btn btn-outline-primary form-control">Save</button>
    </form>
</div>



