@model IEnumerable<Blog>

<div id="carouselExampleDark" class="carousel carousel-light slide mb-5 " data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" class="active"></button>
            }
            else
            {
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i"></button>
            }
        }
    </div>
    <div class="carousel-inner rounded-3">
        @{ var index = 0;}
        @foreach (var item in Model)
        {
            if (index == 0)
            {
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/img/@item.Image" class="d-block w-100" alt="@item.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                </div>
                index++;
            }
            else
            {
                <div class="carousel-item" data-bs-interval="10000">
                    <img src="~/img/@item.Image" class="d-block w-100" alt="@item.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
