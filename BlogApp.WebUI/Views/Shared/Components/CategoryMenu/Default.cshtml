@model IEnumerable<Category>

<div class="list-group">
    <span class="list-group-item bg-dark text-light">Categories</span>
    @foreach (var item in Model)
    {
        <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.CategoryID" class="list-group-item list-group-item-dark list-group-item-action @(ViewBag.SelectedCategory == item.CategoryID.ToString() ? "active" : "")" id="categoryItem" aria-current="true">
            @item.Name
        </a>
    }
</div>
